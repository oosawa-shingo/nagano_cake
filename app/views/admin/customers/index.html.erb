<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4>会員一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customers| %>
          <td><%= customers.id %></td>
          <td>
            <%= link_to admin_customer_path(customers.id) do %>
              <%= customers.first_name %><%= customers.last_name %>
            <% end %>
          </td>
          <td><%= customers.email %></td>
          <td>
            <% if customers.is_active %>
             <p class="text-success"><strong>有効</strong></p>
            <% elsif %>
             <p class="text-muted"><strong>退会</strong></p>
            <% end %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-1 mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>