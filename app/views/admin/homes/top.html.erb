<h1>注文履歴一覧</h1>

<% @orders.each do |order| %>
  <div>
    <p>購入日時：
      <%= link_to admin_order_path(order) do %>
      <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
      <% end %>
    </p>
    <p>購入者：<%= order.customer.first_name %><%= order.customer.last_name %></p>
    <p>注文個数：<%= order.order_details.sum(:amount) %></p>
  </div>
<% end %>
