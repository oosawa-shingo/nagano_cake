<h1>ショッピングカート</h1>

<% @cart_items.each do |cart_item| %>
  <div>
    <p>商品名：
      <%= image_tag cart_item.item.get_image %>
      <%= cart_item.item.name %>
    </p>
    <p>単価（税込）：<%= cart_item.item.with_tax_price.to_s(:dalimited) %></p>
    <div>
    <p>数量：
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit '変更', :class => "btn btn-success" %>
      <% end %>
    </p>
    </div>
    <p>小計：<%= cart_item.subtotal%></p>
    <%= link_to "削除", destroy_cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", :class => "btn btn-denger" %>
  </div>
<% end %>
