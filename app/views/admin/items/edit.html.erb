<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4>商品編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-6 mx-auto">
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name, autofocus: true, id:"inputName", size: "30", placeholder:"商品名"%></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", size: "30x5", placeholder:"商品説明"%></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price, autofocus: true, id:"inputPrice", size: "30", placeholder:"税抜価格"%></td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>