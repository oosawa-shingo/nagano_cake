<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="row offset-1">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th><td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th><td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th><td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% elsif %>
              <p class="text-muted"><strong>退会</strong></p>
            <% end %>
          </td>
        </tr>
      </table>
    <div class="offset-6">
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
    </div>
    </div>
  </div>
</div>