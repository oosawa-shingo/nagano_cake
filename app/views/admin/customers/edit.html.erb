<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-8">
      <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="row offset-1">
    <div class="col-8">
    <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th><td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"姓" %></td>
          <td><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"セイ" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"メイ" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号"%></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所"%></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号"%></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, "true" %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, "false" %>
            <%= f.label :is_active, "退会" %>
          </td>
        </tr>
      </table>
      <div class="offset-3">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>