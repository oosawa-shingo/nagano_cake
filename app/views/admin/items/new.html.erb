<div class="container my-5">
  <div class="row my-3 offset-1">
    <div class="col-4">
      <h4>商品新規登録</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-6 mx-auto">
    <%= form_with model: @items, url: admin_items_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name, size: "30", placeholder:"商品名"%></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, size: "30x5", placeholder:"ここに説明文を記述します"%></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price, size: "30", placeholder:"税抜価格"%>円</td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>