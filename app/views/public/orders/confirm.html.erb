<div class="container my-5">
  <div class="row my-3">
    <div class="col-4">
      <h4>注文情報確認</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <td><%= image_tag cart_item.item.get_image, size: "70x70" %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price.to_s(:dalimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tbody>
          <% @total += cart_item.subtotal %>
          <% end %>
      </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered mb-0">
        <tr>
          <th style="width: 50%">送料</th>
          <td>800</td>
        </tr>
      </table>

      <table class="table table-bordered mb-0">
        <tr>
          <th style="width: 50%">商品合計</th>
          <td><%= @total %></td>
        </tr>
      </table>

      <table class="table table-bordered mb-0">
        <tr>
          <th style="width: 50%">請求金額</th>
          <td><%= @total + 800 %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2 pr-0">
      <h5><strong>支払方法</strong></h5>
    </div>

    <div class="col-3 pl-0">
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <div class="row">
    <div class="col-2 pr-0">
      <h5><strong>お届け先</strong></h5>
    </div>

    <div class="col-3 pl-0">
      <%= @order.address %><br><%= @order.name %>
    </div>
  </div>

  <div class="row">
    <div class="col-4 mx-auto text-center">
      <%= form_with model: @order_new , url: orders_path do |f| %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :billing_amount, value: @total + 800 %>
        <%= f.hidden_field :postage, value: 800 %>
        <%= f.hidden_field :payment_method, value:  @order.payment_method %>
        <%= f.submit "注文を確定する", :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>



