<h1>注文情報確認</h1>

  <% @total = 0 %>

<% @cart_items.each do |cart_item| %>
  <div>
    <p>商品名：
      <%= image_tag cart_item.item.get_image %>
      <%= cart_item.item.name %>
    </p>
    <p>単価（税込）：<%= cart_item.item.with_tax_price.to_s(:dalimited) %></p>
    <div>
    <p>数量：<%= cart_item.amount %></p>
    </div>
    <p>小計：<%= cart_item.subtotal %></p>
    <% @total += cart_item.subtotal %>
  </div>
<% end %>

  <p>送料： 800 </p>

  <p>商品合計：
    <%= @total %>
  </p>

  <p>請求金額：
    <%= @total + 800 %>
  </p>

  <h5>支払方法：
    <%= @order.payment_method_i18n %>
  </h5>

  <h5>お届け先：
    <%= @order.address %>
    <%= @order.name %>
  </h5>

<%= form_with model: @order_new , url: orders_path do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :billing_amount, value: @total + 800 %>
  <%= f.hidden_field :postage, value: 800 %>
  <%= f.hidden_field :payment_method, value:  @order.payment_method %>
  <%= f.submit "注文を確定する", :class => "btn btn-success" %>
<% end %>

